<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#1E1E1E"
    android:background="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#1E1E1E">

        <!-- Header with Go Intercity button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Intercity"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#2E2E2E"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnDismiss"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Dismiss"
                android:tint="#FFFFFF"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Fare Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹250.00"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Includes 5% tax"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash payment"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="#2E2E2E"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="14sp"
                android:paddingEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.67"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Trip Summary -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•"
                android:textSize="14sp"
                android:paddingEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 mins (12.0 km) total"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Route with vertical line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <!-- Vertical line with dots -->
            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingEnd="12dp">

                <!-- Pickup dot -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/pickup_dot"
                    android:layout_marginBottom="4dp" />

                <!-- Vertical line -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#666666"
                    android:layout_marginStart="5dp" />

                <!-- Drop square -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/drop_dot" />
            </LinearLayout>

            <!-- Locations -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Pickup -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9 min (1.5 km)"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Location"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Drop -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Location"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#2575FC"
            android:backgroundTint="#2575FC"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
